<!DOCTYPE html>
<html>
  <head>
    <title>Todo App</title>
    <%= stylesheet_link_tag 'bootstrap-1.2.0.min' %>
    <%= stylesheet_link_tag 'base' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="topbar-wrapper">
      <div class="topbar">
        <div class="topbar-inner">
          <div class="container">
            <h3><%= link_to 'Todo List', root_path %></h3>
            <ul class="nav secondary-nav">
              <% if user_signed_in? %>
                <li><%= link_to "My lists", lists_path %></li>
                <li><%= link_to "Edit profile", edit_user_registration_path %></li>
                <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
              <% else %>
                <li><%= link_to "Sign in", new_user_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <% if notice %>
        <p class='alert-message block-message success'><%= notice %></p>
      <% end %>

      <% if alert %>
        <p class='alert-message block-message error'><%= alert %></p>
      <% end %>

      <div class="row">
        <div class="span12 columns">
          <%= yield %>
        </div>
        <div class="span4 columns">
          <% if user_signed_in? %>
            <p><%= link_to "Create a new list", new_list_path, :class => 'btn primary' %></p>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
