<!DOCTYPE html>
<html>
  <head>
    <title>Todo App</title>
    <%= stylesheet_link_tag 'bootstrap-1.2.0.min' %>
    <%= stylesheet_link_tag 'base' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="topbar-wrapper">
      <div class="topbar">
        <div class="topbar-inner">
          <div class="container">
            <h3><%= link_to 'Todo List', root_path %></h3>
            <ul class="nav secondary-nav">
              <% if user_signed_in? %>
                <%= content_tag(:li, link_to("My lists", lists_path), :class => active_class(lists_path)) %>
                <%= content_tag(:li, link_to("Watched lists", lists_path), :class => active_class(lists_path)) %>
                <%= content_tag(:li, link_to("Edit profile", edit_user_registration_path), :class => active_class(edit_user_registration_path)) %>
                <%= content_tag(:li, link_to("Sign out", destroy_user_session_path, :method => :delete)) %>
                <%= content_tag(:li, image_tag(current_user.avatar.thumb.to_s, :class => "thumb-profile")) %>
              <% else %>
                <%= content_tag(:li, link_to("Sign in", new_user_session_path), :class => active_class(new_user_session_path)) %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="span12 columns">
          <% if notice %>
            <p class='alert-message block-message success'><%= notice %></p>
          <% end %>

          <% if alert %>
            <p class='alert-message block-message error'><%= alert %></p>
          <% end %>

          <%= yield %>
        </div>
        <div class="span4 columns">
          <div class="well">
            <% if user_signed_in? %>
              <p><%= link_to "Create a new list", new_list_path, :class => 'btn primary large' %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
