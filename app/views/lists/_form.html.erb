<div class="inputs">
  <%= f.input :name, :label => "List name", :required => true %>
  <%= f.input :private, :hint => "no one can see this list if private is marked" %>

  <div class="page-header">
    <h5>Tasks</h5>
  </div>

  <div id="tasks-fields">
    <%= f.simple_fields_for :tasks do |task_form| %>
      <%= render 'task', :task_form => task_form %>
    <% end %>
  </div>

  <p id="add-task"><%= add_task_link(f) %></p>
</div>
